@model FinalProject.Models.Product
@{
    var _Categories = ViewBag._Categories;
}

<form method="post" action="/Product/Edit">
    <div class="form-group">
        <label for="Id" class="form-label">Product Id</label>
        <input type="number" id="Id" name="Id" class="form-control" value="@Model.ProductId" readonly hidden />
    </div>

    <div class="form-group">
        <label for="Title" class="form-label">Product Name</label>
        <input type="text" id="Title" name="Title" class="form-control" value="@Model.Title" />
    </div>

    <div class="form-group">
        <label for="Price" class="form-label">Product Price</label>
        <input type="number" id="Price" name="Price" class="form-control" value="@Model.Price" />
    </div>
    <div class="form-group">
        <label for="Description" class="form-label">Description</label>
        <input type="text" id="Description" name="Description" class="form-control" value="@Model.Description" />
    </div>

    <div class="form-group">
        <label for="Quantity" class="form-label">Quantity</label>
        <input type="number" id="Quantity" name="Quantity" class="form-control" value="@Model.Quantity" />
    </div>

    <div class="form-group">
        <label for="CategoryId" class="form-label">Category</label>
        <select asp-items="_Categories" class="form-control" asp-for="CategoryId">
        </select>
    </div>

    <input type="submit" value="Edit Product" class="btn btn-success my-5" />
    <a href="/Product/Index" class="btn btn-secondary">Cancel</a>
</form>

